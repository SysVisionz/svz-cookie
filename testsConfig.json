{
    "compilerOptions": {
      "outDir": "/tests",
      "target": "es6",
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "module": "es2020",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "resolveJsonModule": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "lib": ["es2020", "DOM"]
    },
    "include": ["tests-ts/**/*.ts"]
}