{
    "compilerOptions": {
      "outDir": "test",
      "rootDir": "./test-ts",
      "target": "es6",
      "noEmit": false,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "module": "es2020",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "resolveJsonModule": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "lib": ["es2020", "DOM"],
      "declaration": true,
      "esModuleInterop": true
    },
    "include": ["test-ts/**/*.ts", "test.d.ts"],
    "exclude": ["node_modules", "dist", "src"]
}